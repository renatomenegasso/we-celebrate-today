<% content_for(:title) do %><%= l(@date) %><% end %>

<h1><%= l(build_date(@date), format: :short) %></h1>

<% @holidays.each do |h| %>
  <h3><%= h.description %></h3>
<% end %>

<hr class="intro-divider">
<ul class="list-inline intro-social-buttons">
  <li>
    <a href="http://www.facebook.com/sharer/sharer.php?s=100&amp;p[url]=<%= date_url(month: @date.strftime('%B'), day: @date.day) %>"
        class="btn btn-default btn-lg"
        target="_blank">
      <i class="fa fa-facebook fa-fw"></i> <span class="network-name">Facebook</span>
    </a>
  </li>
  <li>
    <a href="http://twitter.com/share?text=Comemoramos em<%= l(@date, format: :short) %> - &amp;url=<%= date_url(month: @date.strftime('%B'), day: @date.day) %>"
      class="btn btn-default btn-lg"
      target="_blank">
      <i class="fa fa-twitter fa-fw"></i> <span class="network-name">Twitter</span>
    </a>
  </li>
</ul>
